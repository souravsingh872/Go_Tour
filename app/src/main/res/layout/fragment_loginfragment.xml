<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Loginfragment">


     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
          android:fillViewport="true">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/logo"
                   android:id="@+id/logo"
                   android:layout_marginTop="126dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Log In"
                   android:fontFamily="@font/ada"
                   android:textColor="@color/black"
                   android:layout_centerHorizontal="true"
                   android:textSize="30dp"
                   android:id="@+id/login"
                   android:layout_below="@+id/logo"
                   android:layout_marginTop="50dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Email"
                   android:fontFamily="@font/ada"
                   android:textColor="@color/lightblack3"
                   android:textSize="18sp"
                   android:layout_below="@+id/login"
                   android:id="@+id/email"
                   android:layout_marginTop="30dp"
                   android:layout_marginLeft="20dp"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/email"
                   android:fontFamily="@font/ada"
                   android:textColorHint="@color/lightblack"
                   android:hint="Enter your email id"
                   android:textColor="@color/black"
                   android:textSize="16sp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/edittextdesign"
                   android:id="@+id/enteremail"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Password"
                   android:fontFamily="@font/ada"
                   android:textColor="@color/lightblack3"
                   android:textSize="18sp"
                   android:layout_below="@+id/enteremail"
                   android:id="@+id/password"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/password"
                   android:textColor="@color/black"
                   android:fontFamily="@font/ada"
                   android:textColorHint="@color/lightblack"
                   android:hint="Enter your password"
                   android:textSize="16sp"
                   android:layout_marginLeft="20dp"
                   android:drawableRight="@drawable/ic_view"
                   android:layout_marginRight="20dp"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/edittextdesign"
                   android:id="@+id/enterpassword"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Forgot Password?"
                   android:textColor="@color/orange"
                   android:textSize="16sp"
                   android:layout_below="@+id/enterpassword"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/forgetpassword"
                   android:layout_marginTop="20dp"
                   />

               <androidx.appcompat.widget.AppCompatButton
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/edittextdesign"
                   android:layout_marginLeft="20dp"
                   android:fontFamily="@font/ada"
                   android:layout_marginRight="20dp"
                   android:textAllCaps="false"
                   android:backgroundTint="@color/orange"
                   android:text="Log in"
                   android:elevation="8dp"
                   android:outlineSpotShadowColor="@color/orange"
                   android:id="@+id/loginbutton"
                   android:layout_below="@id/forgetpassword"
                   android:layout_marginTop="10dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Or"
                   android:fontFamily="@font/ada"
                   android:textColor="@color/lightblack2"
                   android:textSize="16sp"
                   android:layout_below="@+id/loginbutton"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/or"
                   android:layout_marginTop="15dp"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="10dp"
                   android:layout_marginRight="20dp"
                   android:layout_below="@+id/or"
                   android:background="@drawable/layoutdesign"
                   android:id="@+id/loginwithgoogle"
                   android:layout_marginTop="15dp"
                   android:gravity="center_horizontal"
                   android:layout_marginLeft="20dp"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_google"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/ada"
                        android:text="Log In With Google "
                        android:textColor="@color/black"/>
               </LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sign Up Here"
                   android:textColor="@color/orange"
                   android:fontFamily="@font/ada"
                   android:layout_below="@id/loginwithgoogle"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="15dp"
                   android:id="@+id/signup"
                   android:textSize="16dp"/>

          </RelativeLayout>
     </androidx.core.widget.NestedScrollView>



</RelativeLayout>