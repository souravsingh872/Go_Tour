<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:id="@+id/logo"
                android:layout_marginTop="45dp"/>

            <TextView
                android:fontFamily="@font/ada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="36sp"
                android:id="@+id/signup"
                android:layout_below="@+id/logo"
                android:layout_marginTop="80dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/malecheckbox"
                android:weightSum="2"
                android:background="@drawable/edittextdesign"
                android:layout_below="@+id/signup">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/ada"
                    android:layout_marginLeft="5dp"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack2"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/femalecheckbox"
                android:layout_marginTop="160dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:weightSum="2"
                android:background="@drawable/edittextdesign"
                android:layout_below="@+id/signup">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/ada"
                    android:layout_weight="2"
                    android:text="Female"
                    android:textColor="@color/lightblack2"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/ada"
                android:textColor="@color/lightblack3"
                android:textSize="18sp"
                android:layout_below="@+id/malecheckbox"
                android:id="@+id/email2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email2"
                android:textColorHint="@color/lightblack"
                android:hint="Enter your Email"
                android:fontFamily="@font/ada"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextdesign"
                android:id="@+id/enteremail2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/ada"
                android:textColor="@color/lightblack3"
                android:textSize="18sp"
                android:layout_below="@+id/enteremail2"
                android:id="@+id/password2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password2"
                android:textColorHint="@color/lightblack"
                android:hint="Enter your password"
                android:fontFamily="@font/ada"
                android:drawableRight="@drawable/ic_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextdesign"
                android:id="@+id/enterpassword2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/lightblack3"
                android:fontFamily="@font/ada"
                android:textSize="18sp"
                android:layout_below="@+id/enterpassword2"
                android:id="@+id/confirmpassword"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmpassword"
                android:textColorHint="@color/lightblack"
                android:hint="Re enter Password"
                android:textColor="@color/black"
                android:fontFamily="@font/ada"
                android:drawableRight="@drawable/ic_view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextdesign"
                android:id="@+id/confirmpasswordenter"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/termconditioncheckbox"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/confirmpasswordenter">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/ada"
                    android:text="I agree and accept the"
                    android:textColor="@color/lightblack2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/ada"
                    android:textSize="16sp"
                    android:text="terms to use"
                    android:textColor="@color/orange"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextdesign"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ada"
                android:backgroundTint="@color/orange"
                android:text="Sign up"
                android:textAllCaps="false"
                android:id="@+id/signupbutton"
                android:layout_below="@id/termconditioncheckbox"
                android:layout_marginTop="15dp"/>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>