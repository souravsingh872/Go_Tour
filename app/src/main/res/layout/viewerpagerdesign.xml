<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageback"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:id="@+id/imagefront"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagefront"
        android:text="Explore"
        android:textColor="@color/black"
        android:id="@+id/explore"
        android:fontFamily="@font/ada"
        android:textSize="42dp"
        android:layout_marginTop="30dp"
       android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ada"
        android:textColor="@color/lightblack"
        android:id="@+id/exploreline"
        android:textSize="18dp"
        android:layout_below="@id/explore"
        android:text="Explore your favourite destination \narround the world "/>



</RelativeLayout>